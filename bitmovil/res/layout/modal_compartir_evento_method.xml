<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codictados="http://schemas.android.com/apk/res/com.bit.client"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:alpha="0.8"
    android:weightSum="1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">

        <com.bit.utils.TextViewPersonalizado
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:text="Activar Entrada"
            android:textStyle="normal"
            codictados:fuente="fonts/opensans_regular.ttf"
            android:textAppearance="@style/texto_titulo_dialog"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayLight"/>

        <com.bit.utils.TextViewPersonalizado
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_asignar"
            android:text="Puedes asignarle el avatar activo a este evento.."
            android:textStyle="normal"
            codictados:fuente="fonts/opensans_light.ttf"
            android:textAppearance="@style/texto_titulo_dialog"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/dialog_button_asignar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/flecha_style_buttons"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">

        <com.bit.utils.TextViewPersonalizado
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:text="O puedes enviarle este evento a un amigo."
            android:textStyle="normal"
            codictados:fuente="fonts/opensans_light.ttf"
            android:textAppearance="@style/texto_titulo_dialog"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp" />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">
          <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailText"
                android:hint="E-MAIL de amiga/o"
                android:inputType="textEmailAddress"
                android:textColor="@color/GrayLight"
              android:textColorHint="@color/GrayLight" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descrText"
                android:hint="Nombre Amiga/o"
                android:textColor="@color/GrayLight"
                android:textColorHint="@color/GrayLight" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="21dp"
                android:layout_below="@+id/spinner_state"
                android:layout_alignParentLeft="true">
            <Button
                android:id="@+id/dialogButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cancel_style_buttons"
                android:layout_gravity="center_horizontal" />
            <Button
                android:id="@+id/dialogButtonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ok_style_buttons"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>