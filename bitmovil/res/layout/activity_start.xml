<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_start"
    android:gravity="center_vertical|center_horizontal"

    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/pbHeaderProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" android:id="@+id/login_view">

        <EditText
            android:id="@+id/tx_user"
            android:layout_width="159dp"
            android:layout_height="50dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/campodetextoordenes"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="00000000-0"
            android:textStyle="bold" android:textColor="@color/Black" android:textColorHint="@color/Gray">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/tx_password"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/campodetextoordenes"
            android:ems="10"
            android:gravity="center"
            android:hint="********"
            android:inputType="textPassword" android:textColor="@color/Black" android:textColorHint="@color/Gray"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="start_app_clicked"
            android:src="@drawable/start_button_enter" android:contentDescription="enter the app"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</LinearLayout>