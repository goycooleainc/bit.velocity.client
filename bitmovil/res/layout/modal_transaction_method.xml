<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codictados="http://schemas.android.com/apk/res/com.bit.client"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:alpha="0.8"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.bit.utils.TextViewPersonalizado
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:text="Detalle de transacciÃ³n"
        android:textStyle="normal"
        codictados:fuente="fonts/opensans_regular.ttf"
        android:textAppearance="@style/texto_titulo_dialog"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GrayLight"/>

    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"
                  android:layout_marginTop="10dp">
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/txProducto"
                  android:hint="PRODUCTO" android:textColor="@color/GrayLight"
            android:textColorHint="@color/GrayLight" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txMercante"
            android:hint="MERCANTE"
            android:textColor="@color/GrayLight"
            android:textColorHint="@color/GrayLight" />
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCode" android:hint="AVATAR USADO" android:textColor="@color/GrayLight"
            android:textColorHint="@color/GrayLight" />
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/txFecha"
                  android:hint="FECHA" android:textColor="@color/GrayLight"
            android:textColorHint="@color/GrayLight"
            android:lines="2" />
        <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/txTotal"
                  android:hint="TOTAL" android:textColor="@color/GrayLight"
            android:textColorHint="@color/GrayLight" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:gravity="center" android:layout_marginTop="15dp"
                  android:layout_below="@+id/spinner_state" android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp">
        <Button android:id="@+id/dialogButtonCancel" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:background="@drawable/ok_style_buttons"/>
    </LinearLayout>
</LinearLayout>