<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bkg"
              android:gravity="center_vertical|center_horizontal"

              android:orientation="vertical" >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp" android:gravity="center_vertical">
        <ImageButton android:id="@+id/imageButton" android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@android:color/transparent" android:onClick="onLogout"
                     android:src="@drawable/ic_logout" android:scaleType="centerCrop"
                     android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView android:id="@+id/tx_nombre" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:text="JOHN DOE" android:textAppearance="@style/texto_subtitulo"
              android:textColor="@color/Black" android:textStyle="bold"
              android:gravity="center|center_vertical|center_horizontal" android:layout_marginTop="20dp"
    />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="100dp"
                  android:layout_gravity="center" android:gravity="center|center_vertical">
        <ImageButton android:layout_width="50dp" android:layout_height="50dp" android:id="@+id/btnAvatares"
                     android:src="@drawable/ic_avatar" android:background="@android:color/transparent"
                     android:adjustViewBounds="false" android:scaleType="fitCenter"/>
        <ImageButton android:layout_width="50dp" android:layout_height="50dp"
                     android:id="@+id/btnVendingMachine" android:src="@drawable/ic_shopping"
                     android:background="@android:color/transparent" android:scaleType="fitCenter"
                     android:layout_marginLeft="5dp"/>
        <ImageButton android:layout_width="50dp" android:layout_height="50dp" android:id="@+id/btnWallet"
                     android:src="@drawable/ic_wallet" android:background="@android:color/transparent"
                     android:scaleType="fitCenter" android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" android:id="@+id/login_view">

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="@style/texto_titulo_principal" android:text="INSTRUCCIONES"
                  android:id="@+id/textView8" android:gravity="center_vertical|center" android:textColor="@color/Gray"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bienvenido, abajo esta tu saldo disponible para compras de todo tipo. Recuerda que para usarlo debes asignarle un Avatar. El primero boton te da acceso rapido a estos, El segundo a la tienda y el tercero a tus compras y transacciones."
                android:id="@+id/textView7" android:layout_margin="3dp" android:textColor="@color/Gray"/>
        <ImageView android:id="@+id/imageView3" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_back_title_splitter" android:paddingTop="6dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/texto_titulo_principal"
                android:text="SALDO DISPONIBLE"
                android:id="@+id/textView5" android:gravity="center_vertical|center" android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="@style/texto_titulo_principal"
                android:text="$0"
                android:id="@+id/txBalance" android:gravity="center_vertical|center|center_horizontal"
                android:textSize="60dp"/>
    </LinearLayout>

</LinearLayout>