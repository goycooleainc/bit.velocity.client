<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codictados="http://schemas.android.com/apk/res/com.bit.client"
    android:id="@+id/swipe_container"
    android:background="@drawable/bkg_new"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" ><![CDATA[

    ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_title_splitter" />


        ]]>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.bit.utils.TextViewPersonalizado
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headline"
            android:background="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Mi Monedero"
            android:textStyle="normal"
            codictados:fuente="fonts/opensans_regular.ttf"
            android:textSize="@dimen/observ"
            android:textColor="@color/GrayLight"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayLight"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/headline" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/White"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="10dp">

        <com.bit.utils.TextViewPersonalizado
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etiq_saldo"
            android:text="TOKENS DISPONIBLES:"
            codictados:fuente="fonts/opensans_regular.ttf"
            android:textSize="16dp"
            android:textColor="@color/GrayLight"
            android:textStyle="normal" />

        <com.bit.utils.TextViewPersonalizado
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txBalance"
            android:text="00.00"
            codictados:fuente="fonts/coolvetica_rg.ttf"
            android:textSize="40dp"
            android:textColor="@color/Orange"
            android:layout_below="@+id/etiq_saldo"
            android:gravity="right"
            android:textStyle="normal" />

    </RelativeLayout>

    <ListView
        android:id="@+id/product_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1">
    </ListView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:layout_width="50dp" android:layout_height="50dp"
                 android:id="@+id/btnClose" android:src="@drawable/btn_ok"
                 android:background="@android:color/transparent" android:adjustViewBounds="false"
                 android:cropToPadding="false" android:scaleType="fitCenter"
                android:layout_margin="10dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>