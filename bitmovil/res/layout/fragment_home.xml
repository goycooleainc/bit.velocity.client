<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
                  android:layout_height="fill_parent" android:background="@drawable/bkg"
                  android:gravity="center_vertical|center_horizontal" android:orientation="vertical">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="60dp"
                      android:gravity="center_vertical">
        </LinearLayout>
        <ProgressBar style="@android:style/Widget.Holo.ProgressBar.Horizontal" android:id="@+id/progressBar"
                     android:layout_width="fill_parent" android:layout_height="wrap_content"
                     android:indeterminate="true" android:visibility="gone"/>
        <TextView android:id="@+id/tx_nombre" android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:text="JOHN DOE" android:textAppearance="@style/texto_subtitulo"
                  android:textColor="@color/Black" android:textStyle="bold"
                  android:gravity="center|center_vertical|center_horizontal" android:layout_marginTop="5dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="fill_parent"
                      android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linearLayout">
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textAppearance="@style/texto_titulo_principal" android:text="INSTRUCCIONES"
                      android:id="@+id/textView11" android:gravity="center_vertical|center"
                      android:textColor="@color/Gray"/>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="Bienvenido, abajo esta tu saldo disponible para compras de todo tipo. Recuerda que para usarlo debes asignarle un Avatar. El primero boton te da acceso rapido a estos, El segundo a la tienda y el tercero a tus compras y transacciones."
                      android:id="@+id/textView11" android:layout_margin="3dp" android:textColor="@color/Gray"/>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textAppearance="@style/texto_titulo_principal" android:text="SALDO DISPONIBLE"
                      android:id="@+id/textView12" android:gravity="center_vertical|center"
                      android:layout_marginTop="10dp"/>
            <TextView android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:textAppearance="@style/texto_titulo_principal" android:text="$0"
                      android:id="@+id/txBalance" android:gravity="center_vertical|center|center_horizontal"
                      android:textSize="60dp"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
