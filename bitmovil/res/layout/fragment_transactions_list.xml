<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:codictados="http://schemas.android.com/apk/res/com.bit.client"
    android:id="@+id/swipe_container"
    android:background="@drawable/bkg_new"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        android:paddingBottom="10dp"><![CDATA[

    ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_title_splitter" />

    ]]>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center_vertical|center_horizontal">

            <com.bit.utils.TextViewPersonalizado
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headline"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Cartola"
                android:textStyle="normal"
                codictados:fuente="fonts/opensans_regular.ttf"
                android:textSize="@dimen/observ"
                android:textColor="@color/GrayLight"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>

        <com.bit.utils.TextViewPersonalizado
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titulo_paso_uno"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Cartola de transacciones hechas"
            android:textStyle="normal"
            codictados:fuente="fonts/opensans_bold.ttf"
            android:textSize="18sp"
            android:textColor="@color/Gray"
            android:gravity="center" />

    </LinearLayout>

    <ListView
        android:id="@+id/product_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </ListView>

</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>