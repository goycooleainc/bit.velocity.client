<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@android:color/white"
            android:alpha="0.8"
            android:weightSum="1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/texto_subtitulo"
            android:text="Ingresa tus datos para Registrarte"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
        android:textColor="@color/GrayLight"
        android:layout_marginBottom="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GrayLight"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rutText"
            android:hint="RUT"
            android:textColor="@color/Black"
            android:textColorHint="@color/GrayLight" />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal">
      <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordText"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColor="@color/Black"
          android:textColorHint="@color/GrayLight" />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal">
      <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailText"
            android:hint="E-MAIL"
            android:inputType="textEmailAddress"
            android:textColor="@color/Black"
          android:textColorHint="@color/GrayLight" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/spinner_state"
            android:layout_alignParentLeft="true"
        android:layout_weight="0.68">
        <Button
            android:id="@+id/dialogButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn1_cancelar"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn1_aceptar"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>