<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_start"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCloseSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_orders_circle"
            android:layout_marginTop="15dp" android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <!-- RAYA DIVISORA -->


    <!-- SEPARADOR -->

    <!-- SEPARADOR -->


    <!-- SEPARADOR -->

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical" android:layout_marginTop="10dp" android:gravity="center">

        <TextView android:layout_width="fill_parent" android:layout_height="44dp" android:text="AVATAR ACTUAL"
                  android:textAppearance="@style/texto_subtitulo" android:textColor="@color/White"
                  android:textStyle="bold" android:gravity="center" android:id="@+id/textView8"
                  android:layout_marginTop="120dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAvatar" android:layout_gravity="center_horizontal" android:textColor="#ff1cba29"
                android:hint="00000000000" android:textSize="50dp" android:textColorHint="#ff1cba29"
                android:layout_marginTop="10dp" android:gravity="center_horizontal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar Nuevo Avatar"
                android:id="@+id/btnReplace" android:layout_marginTop="20dp" android:onClick="goSave"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Usar Celular Como Avatar" android:id="@+id/btnMobile" android:layout_marginTop="20dp"
                android:onClick="goSaveMobile"/>
        <TextView android:layout_width="fill_parent" android:layout_height="44dp" android:text="NUEVO AVATAR"
                  android:textAppearance="@style/texto_subtitulo" android:textColor="@color/White" android:textStyle="bold"
                  android:gravity="center" android:id="@+id/textView9" android:paddingTop="10dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txNuevoAvatar" android:layout_gravity="center_horizontal" android:textColor="#ff1c8bba"
                android:textColorHint="#ff1c8bba" android:hint="00000000000" android:textSize="50dp"
                android:gravity="center_horizontal"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_error_main"
                android:gravity="center"
                android:textAppearance="@style/texto_error" />
    </LinearLayout>

</LinearLayout>