<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:focusable="true"
    android:windowSoftInputMode="stateHidden"
    android:focusableInTouchMode="true"
    android:orientation="vertical" ><![CDATA[

    ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_title_splitter" />

    ]]>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="100dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_paso_uno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="SELECCIONE PRODUCTOS"
            android:textAppearance="@style/texto_titulo_principal"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tx_nombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="JOHN DOE"
            android:textAppearance="@style/texto_subtitulo"
            android:textColor="@color/Gray"
            android:textStyle="bold" android:gravity="center"/>

    </LinearLayout>


    <ImageView android:id="@+id/imageView4" android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/ic_back_title_splitter" android:paddingTop="6dp"/>
    <TextView android:id="@+id/textView3" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:layout_marginLeft="5dp" android:gravity="center" android:text="VENTA ACTUAL"
              android:textAppearance="@style/texto_titulo_principal" android:textColor="@color/White"
              android:textSize="18sp" android:paddingTop="10dp"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="70dp"
                  android:layout_marginTop="20dp" android:gravity="center|center_horizontal" android:layout_gravity="center">
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tx_amount" android:layout_gravity="center" android:hint="TOTAL $0.0"
                android:textColor="@color/White" android:textColorHint="@color/Black"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Este es el total de la venta actual, Para poder terminar la venta haga click en el boton con un ticket y apareceran las opciones de pago o de lo contrario la opcino con una X para cancelar la venta actual y comenzar de nuevo. "
            android:id="@+id/textView2" android:gravity="center" android:textColor="@color/White"
            android:textSize="18dp"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_marginTop="3dp" android:gravity="center">
        <ImageButton android:id="@+id/btnCancel" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:layout_marginTop="5dp"
                     android:background="@android:color/transparent" android:onClick="onCancelar"
                     android:src="@drawable/ic_cancel_circle" android:layout_marginRight="5dp"
                     android:layout_gravity="center"/>
        <ImageButton android:id="@+id/btnOk" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:layout_marginTop="5dp"
                     android:background="@android:color/transparent"
                     android:src="@drawable/ic_done_circle" android:layout_marginLeft="30dp"
                     android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>