<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- **Theme Default** -->
    <style name="texto_titulo_principal">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="texto_subtitulo">
        <item name="android:textColor">#0099cc</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="texto_normal_label">
        <item name="android:textColor">#525252</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="texto_error">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="texto_editable">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="texto_listview_ordenes">
        <item name="android:textColor">#0099cc</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>